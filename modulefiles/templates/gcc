#%Module1.0

proc ModulesHelp { } {
  puts stderr "gcc ___VERSION\n"
}

module-whatis "gcc $version"

conflict gcc

set version        ___VERSION
set prefix         /usr/local/package/gcc/$version
set bin_path       $prefix/bin
# set include_path $prefix/include
# set library_path $prefix/lib64

# Config by yourself
prepend-path PATH $bin_path
